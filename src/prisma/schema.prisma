enum Tipo {
  Cor
  Texto
}

model OpcoesProduto {
  id             Int     @id @default(autoincrement())
  produto_id     Int      
  produto        Produtos @relation(fields: [produto_id], references: [id])
  titulo         String
  shape          Shape   @default(Quadrado)
  radius         Int     @default(0)
  type           Tipo    @default(Texto)
  valores_produto String
}

